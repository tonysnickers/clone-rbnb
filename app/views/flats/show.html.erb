<div class="container">
  <div class="mb-5 mt-5">
    <%= link_to "Back", flats_path, class: "text-decoration-none border border-primary rounded-2 p-3"  %>
  </div>

    <div style="width: 100%; height: 400px;"class="rounded-3"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']
      %>" >hello</div>

  <div class="mt-5">
      <% @flat.photos.each do |photo| %>
        <%= cl_image_tag photo.key, width: 400, height: 300, crop: :fill %>
      <% end %>
      <div class="card border-success mb-3 mt-5" style="max-width: 18rem;">
        <div class="card-header bg-transparent border-success"><%= @flat.name %></div>
          <div class="card-body text-success">
            <h5 class="card-title danger"><%= @flat.address %></h5>
            <p class="card-text"><%= @flat.description %></p>
          </div>
      </div>
  </div>
</div>
